@using WebApp.Helpers;
<script src="~/Scripts/Views/vEmpresas.js"></script>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.CtrlTable(viewName: "vEmpresas", id: "tblEmpresas", title: "Lista de empresas",
    columnsTitle: "CedulaJuridica,NombreComercial,NombreLegal,PaginaWeb,Telefono,EstadoEmpresa",
    ColumnsDataName: "cedula,nombre,apellido1,apellido2,dob,correoUsuario,contrasena,telefono,estadoUsuario",
    onSelectFunction: "BindFields")


<div class="card border-secondary" style="margin-top: 50px;">
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-8">Edicion de usuarios</div>
            <div class="col-md-4">
                @Html.CtrlButton(viewName: "vEmpresas", id: "btnCreate", label: "Create", onClickFunction: "Create", buttonType: "success")
                @Html.CtrlButton(viewName: "vEmpresas", id: "btnUpdate", label: "Update", onClickFunction: "Update", buttonType: "info")
                @Html.CtrlButton(viewName: "vEmpresas", id: "btnDelete", label: "Delete", onClickFunction: "Delete", buttonType: "danger")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="bs-component">
                    <form id="frmEdition">
                        @Html.CtrlInput(id: "txtCedulaJuridica", type: "text", label: "Cedula Juridica", columnDataName: "cedulaJuridica")
                        @Html.CtrlInput(id: "txtNombreComercial", type: "text", label: "Nombre Comercial", columnDataName: "nombreComercial")
                        @Html.CtrlInput(id: "txtNombreLegal", type: "text", label: "Nombre Legal", columnDataName: "nombreLegal")
                        @Html.CtrlInput(id: "txtPaginaWeb", type: "text", label: "Pagina Web", columnDataName: "paginaWeb")
                        @Html.CtrlInput(id: "txtTelefono", type: "number", label: "Telefono", columnDataName: "telefono")
                        @Html.CtrlInput(id: "txtEstadoEmpresa", type: "text", label: "EstadoEmpresa", columnDataName: "estadoEmpresa")
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



